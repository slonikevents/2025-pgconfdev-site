{% set title = "Poster Session" %}
{% extends "base.html.j2" %}

{% block head %}
  <style>
    .poster-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin: 2rem 0;
    }

    .poster-item {
      border: 1px solid var(--mute-border-color);
      border-radius: var(--border-radius);
      padding: 1rem;
      text-align: center;
    }

    .poster-item iframe {
      width: 100%;
      height: 400px;
      border: none;
      margin-bottom: 1rem;
    }

    .poster-item h3 {
      margin: 0.5rem 0;
      font-size: 1.2rem;
    }

    .poster-item p {
      margin: 0.5rem 0;
      color: var(--mute-color);
    }

    .poster-item a {
      display: inline-block;
      margin-top: 0.5rem;
      padding: 0.5rem 1rem;
      background-color: var(--primary-background-color);
      color: white;
      text-decoration: none;
      border-radius: var(--border-radius);
    }

    .poster-item a:hover {
      background-color: var(--primary-hover-background-color);
    }
  </style>
{% endblock %}

{% block main %}
